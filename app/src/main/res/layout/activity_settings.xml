<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/background_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/back_app"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="@id/guidelineLogoEnd"
        app:layout_constraintStart_toStartOf="@id/guidelineLogoStart"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/tool"
        layout="@layout/layout_toolbar_title_back" />

    <include layout="@layout/layout_guideline" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:alpha="0.25"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool" />

    <TextView
        android:id="@+id/llPushNotification"
        style="@style/fontRegular"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:drawablePadding="16dp"
        android:gravity="center|start"
        android:text="@string/label_push_notification"
        android:textColor="@color/text_heading_color"
        android:textSize="@dimen/_14ssp"
        app:drawableStartCompat="@drawable/ic_notify_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool" />

    <TextView
        android:id="@+id/llAboutUs"
        style="@style/fontRegular"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:drawablePadding="16dp"
        android:gravity="center|start"
        android:text="@string/label_about_us"
        android:textColor="@color/text_heading_color"
        android:textSize="@dimen/_14ssp"
        app:drawableStartCompat="@drawable/about_icon_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llPushNotification" />

    <TextView
        android:id="@+id/llFaq"
        style="@style/fontRegular"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:drawablePadding="16dp"
        android:gravity="center|start"
        android:text="@string/label_faq"
        android:textColor="@color/text_heading_color"
        android:textSize="@dimen/_14ssp"
        app:drawableStartCompat="@drawable/faq_icon_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llAboutUs" />

    <TextView
        android:id="@+id/llTermsCondition"
        style="@style/fontRegular"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:drawablePadding="16dp"
        android:gravity="center|start"
        android:text="@string/label_terms_condition"
        android:textColor="@color/text_heading_color"
        android:textSize="@dimen/_14ssp"
        app:drawableStartCompat="@drawable/terms_condition_icon_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llFaq" />

    <TextView
        android:id="@+id/llPrivacyPolicy"
        style="@style/fontRegular"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:drawablePadding="16dp"
        android:gravity="center|start"
        android:text="@string/label_privacy_policy"
        android:textColor="@color/text_heading_color"
        android:textSize="@dimen/_14ssp"
        app:drawableStartCompat="@drawable/privacy_policy_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llTermsCondition" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/llCustomerSupport"
        style="@style/fontRegular"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:drawablePadding="16dp"
        android:gravity="center|start"
        android:text="@string/label_customer_support"
        android:textColor="@color/text_heading_color"
        android:textSize="@dimen/_14ssp"
        app:drawableStartCompat="@drawable/support_icon_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llPrivacyPolicy" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/llLogout"
        style="@style/fontRegular"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:drawablePadding="16dp"
        android:gravity="center|start"
        android:text="@string/logout"
        android:textColor="@color/text_heading_color"
        android:textSize="@dimen/_14ssp"
        app:drawableStartCompat="@drawable/logout_icon_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llCustomerSupport" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewPushOn"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_30sdp"
        android:paddingVertical="@dimen/_6sdp"
        android:src="@drawable/ic_push_on"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/llPushNotification"
        app:layout_constraintEnd_toEndOf="@id/llPushNotification"
        app:layout_constraintTop_toTopOf="@id/llPushNotification" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewPushOff"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_30sdp"
        android:paddingVertical="@dimen/_6sdp"
        android:src="@drawable/ic_push_off"
        app:layout_constraintBottom_toBottomOf="@id/llPushNotification"
        app:layout_constraintEnd_toEndOf="@id/llPushNotification"
        app:layout_constraintTop_toTopOf="@id/llPushNotification" />

</androidx.constraintlayout.widget.ConstraintLayout>