<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorText</item>
        <item name="colorAccent">@color/colorTerms</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:windowDisablePreview">true</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="shapeableImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="shapeableImageViewProfile" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="shapeableImageViewProfileLeaderboard" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">63dp</item>
    </style>

    <style name="shapeableImageViewProfileLeaderboardSmall" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">56dp</item>
    </style>

    <style name="shapeableImageViewHomeGame" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">17dp</item>
    </style>

    <style name="EtsyBlurDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/DialogSlideAnimation</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>


    <style name="DialogSlideAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog</item>
    </style>

    <!--  Tool Tip   -->
    <style name="ToolTipPopupAnimation">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>


    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>-->
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorAccent">@color/colorTransparent</item>
    </style>


    <style name="fontBoldItalic">
        <item name="android:fontFamily">@font/gill_sans_bold</item>
    </style>

    <style name="fontBold">
        <item name="android:fontFamily">@font/berlin_sans_bold</item>
    </style>

    <style name="fontRegular">
        <item name="android:fontFamily">@font/berlin_sans_regular</item>
    </style>


    <style name="tvStyleNav">
        <item name="android:fontFamily">@font/berlin_sans_regular</item>
        <item name="android:textColor">@color/text_heading_color</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <style name="tvStyleBold">
        <item name="android:fontFamily">@font/berlin_sans_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="tvStyleRegular">
        <item name="android:fontFamily">@font/berlin_sans_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_heading_color</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="edtStyleCommon" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edittext_white</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:height">@dimen/_48sdp</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/berlin_sans_regular</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="btnStyleCommon" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/berlin_sans_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="background">@drawable/bg_button_radius_12</item>
        <item name="android:background">@drawable/bg_button_radius_12</item>
        <item name="android:textColor">@color/btn_content_color</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="btnStyleCommonSmall" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/berlin_sans_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="background">@drawable/bg_btn_small_radial_50</item>
        <item name="android:background">@drawable/bg_btn_small_radial_50</item>
        <item name="android:textColor">@color/btn_content_color</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="btnStyleSmall" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/berlin_sans_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="background">@drawable/bg_btn_small</item>
        <item name="android:background">@drawable/bg_btn_small</item>
        <item name="android:textColor">@color/btn_content_color</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>


    <style name="btnStyleSmallRadius12" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/berlin_sans_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="background">@drawable/bg_btn_small_radial</item>
        <item name="android:background">@drawable/bg_btn_small_radial</item>
        <item name="android:textColor">@color/btn_content_color</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="btnStyleYellow" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/gill_sans_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="background">@drawable/bg_button_yellow</item>
        <item name="android:background">@drawable/bg_button_yellow</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="btnStyleTabActive" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/berlin_sans_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="background">@drawable/ic_tab_active</item>
        <item name="android:background">@drawable/ic_tab_active</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>


    <style name="PinWidget.PinView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:cursorVisible">true</item>
        <item name="cursorColor">@color/colorPrimary</item>
        <item name="cursorWidth">@dimen/_1sdp</item>
        <item name="android:inputType">number</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="hideLineWhenFilled">false</item>
        <item name="itemCount">4</item>
        <item name="itemHeight">@dimen/_30sdp</item>
        <item name="itemWidth">@dimen/_30sdp</item>
        <item name="itemRadius">0dp</item>
        <item name="itemSpacing">@dimen/_8sdp</item>
        <item name="lineColor">@color/colorTransparent</item>
        <item name="lineWidth">0dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="fontFamily">@font/gill_sans_bold</item>
    </style>

    <style name="dialog_animation_fade">
        <item name="android:windowEnterAnimation">@anim/fade_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/fade_out_dialog</item>
    </style>

</resources>
