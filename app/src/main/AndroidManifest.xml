<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.bluboy.android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <queries>
        <package android:name="com.whatsapp" />
        <package android:name="com.whatsapp.w4b" />

        <intent>
            <action android:name="android.intent.action.VIEW" />

            <data
                android:host="pay"
                android:scheme="upi" />
        </intent>

        <package android:name="com.android.chrome" />
    </queries>

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name="com.bluboy.android.MyApplication"
        android:allowBackup="false"
        android:fullBackupOnly="false"
        android:hasFragileUserData="true"
        android:icon="@mipmap/ic_launcher"
        android:installLocation="internalOnly"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:logo="@mipmap/ic_launcher"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:resizeableActivity="false"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:allowBackup">
        <activity
            android:name="com.bluboy.android.presentation.home.activities.ReferAndEarnActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.home.activities.LeaderboardActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.bluboy.android.presentation.home.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.home.activities.CMSActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.game.activity.GameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.game.activity.GameDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.game.activity.GameHistoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.profile.KycActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.profile.KycDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.profile.KycPANActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.profile.KycAadhaarActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.game.activity.GameHistoryFromHomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.settings.VideoActivity"
            android:launchMode="standard" />
        <activity
            android:name="com.bluboy.android.presentation.imagePickerCropper.SCropResultActivity"
            android:launchMode="standard"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.settings.PhotoZoomActivity"
            android:launchMode="standard"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.settings.HowToPlayTextOnlyActivity"
            android:launchMode="standard"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.profile.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.wallet.WithdrawDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.wallet.WithdrawActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.wallet.MyBeneficiaryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.transaction.TransactionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.wallet.PaymentOptionsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.wallet.BeneficiaryAddActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.bluboy.android.presentation.settings.SettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.wallet.PromocodeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.settings.ContactUsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.bluboy.android.presentation.settings.FaqActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.settings.HowToPlayActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.game.activity.TutorialActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.profile.EditProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.bluboy.android.presentation.home.NotificationActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.bluboy.android.presentation.loginsignup.activities.OtpVerificationActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />
        <activity
            android:name="com.bluboy.android.presentation.loginsignup.SignupActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.bluboy.android.presentation.loginsignup.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.bluboy.android.presentation.splash.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="${crashlyticsCollectionEnabled}" />

        <service
            android:name="com.bluboy.android.presentation.core.firebase.FirebaseMessaging"
            android:exported="true"
            android:stopWithTask="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true"
            tools:replace="android:authorities">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/files_path"
                tools:replace="android:resource" />

        </provider>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notification_logo" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/app_name" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>